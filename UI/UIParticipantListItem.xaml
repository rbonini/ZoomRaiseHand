<UserControl x:Class="RaiseHandApp.UI.UIParticipantListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RaiseHandApp"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200
             ">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="137*">
            </ColumnDefinition>
            <ColumnDefinition Width="63*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="particpantLabel" Content="Label" Height="30" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button x:Name="removeButton" Content="Remove" Grid.Column="1" Margin="6,12,10,8" VerticalAlignment="Center" HorizontalAlignment="Center" Width="47" Height="30" Background="#FFF50303" Click="Button_Click"/>
    </Grid>
</UserControl>
